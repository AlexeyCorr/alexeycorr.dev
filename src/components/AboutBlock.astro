---
interface Props {
  data: {
    title: string
    alt: string
    descriptions: Array<string>
    links: Array<object>
  };
}

const { data } = Astro.props;
---

<section class="about-block container" id="about">
  <strong class="about-block__accent"></strong>

  <h1 class="about-block__title">
    {data.title}
  </h1>

  <picture class="about-block__picture">
    <source
      srcset="../assets/img/about/hi@1x.webp 1x, ../assets/img/about/hi@2x.webp 2x"
      type="image/webp"
    >
    <img
      src="../assets/img/about/hi@1x.jpg"
      srcset="../assets/img/about/hi@2x.jpg 2x"
      width="536"
      height="536"
      loading="eager"
      decoding="sync"
      alt={data.alt}
    >
  </picture>

  <div class="about-block__content">
    {data.descriptions.map((description: string) => (
      <p class="about-block__description" set:html={description} />
    ))}

    <ul class="about-block__list">
      {data.links.map((item: object) => (
        <li class="about-block__item">
          <a
            class="about-block__link"
            href={item.link}
            target="_blank"
            rel="noopener"
          >
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>

<script>
  const TYPING_SPEED = 250
  const TYPING_DELAY = 5000
  const element = document.querySelector('.about-block__accent')
  const greetings = ['안녕', 'こんにちは', 'Hello', 'Привет', 'Hola', '你好', 'Sain uu', 'สวัสดี', 'Xin chào', 'გამარჯობა', 'Привит', 'Shalom', 'Aloha', 'Salom']

  const typing = () => {
    let textIndex = 0
    let index = 0
    let interval: ReturnType<typeof setInterval>
    let timeout: ReturnType<typeof setTimeout>

    const type = (str: string) => {
      interval = setInterval(() => {
        if (index > str.length) {
          clearInterval(interval)
          element?.classList.add('about-block__accent--animate')

          timeout = setTimeout(() => {
            backspace(str)
          }, TYPING_DELAY)
        } else {
          clearTimeout(timeout)
          element?.classList.remove('about-block__accent--animate')
          element && (element.textContent = str.slice(0, index))
          index++
        }
      }, TYPING_SPEED)
    }

    const backspace = (str: string) => {
      interval = setInterval(() => {
        if (index < 0) {
          clearInterval(interval)
          element?.classList.add('about-block__accent--animate')

          timeout = setTimeout(() => {
            index = 0
            textIndex = textIndex === (greetings.length - 1) ? 0 : ++textIndex
            type(greetings[textIndex])
          }, TYPING_SPEED)
        } else {
          clearTimeout(timeout)
          element?.classList.remove('about-block__accent--animate')
          element && (element.textContent = str.slice(0, index))
          index--
        }
      }, TYPING_SPEED)
    }

    type(greetings[textIndex])
  }

  typing()
</script>

<style lang="scss">
  @use '@/styles/variables' as *;
  @use '@/styles/mixins' as *;

  .about-block {
    padding-top: 30px;
    padding-bottom: 30px;

    @media (min-width: $lg) {
      display: grid;
      grid-column-gap: 32px;
      grid-template-columns: 0.9fr 1fr;
      grid-template-rows: auto auto 1fr;
      padding-top: 48px;
      padding-bottom: 60px;
    }

    @media (min-width: $xl) {
      grid-column-gap: 70px;
    }
  }

  .about-block__accent {
    display: block;
    margin-bottom: 24px;
    color: var(--accent-color);
    font-family: 'Neue Machina', sans-serif;
    font-size: clamp(48px, 10vw, 120px);
    font-weight: 800;

    @media (min-width: $lg) {
      grid-column: 1/-1;
      margin-bottom: 0;
    }

    &::after {
      content: '|';
      animation: none;
    }

    &--animate::after {
      animation: --blink 1s infinite;
    }
  }

  .about-block__title {
    font-family: 'Neue Machina', sans-serif;
    font-weight: 800;
    margin-top: 0;
    margin-bottom: 24px;
    font-size: clamp(32px, 4vw, 48px);
    line-height: 1;


    @media (min-width: $lg) {
      grid-column: 2/3;
      margin-bottom: 100px;
    }

    @media (min-width: $xl) {
      margin-top: -30px;
      margin-bottom: 150px;
    }
  }

  .about-block__picture {
    display: block;

    @media (max-width: $mdMax) {
      max-width: 546px;
      margin: 0 auto 24px;
    }

    @media (min-width: $lg) {
      grid-row: 2/4;
      grid-column: 1/2;
      padding-top: 92px;
    }

    @media (min-width: $xl) {
      margin-left: auto;
    }

    img {
      display: block;

      @media (min-width: $lg) {
        width: 536px;
        height: 536px;
        object-fit: cover;
      }
    }
  }

  .about-block__content {
    max-width: 600px;
  }

  .about-block__description {
    margin-top: 0;
    margin-bottom: 0;
    text-indent: 30px;

    &:not(:last-of-type) {
      margin-bottom: 24px;
    }
  }

  .about-block__list {
    @include ulres;

    display: flex;
    gap: 5px;
    margin-top: 24px;
  }

  .about-block__link {
    font-family: 'Neue Machina', sans-serif;
    font-size: 16px;
    text-decoration: underline;

    &:hover {
      @media (min-width: $lg) {
        text-decoration: none;
      }
    }
  }

  @keyframes --blink {
    0%, 100% {opacity: 1;}
    50% {opacity: 0;}
  }
</style>
