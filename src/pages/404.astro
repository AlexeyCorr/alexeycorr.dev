---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Not Found" description="404 Error — this page was not found">
	<section class="not-found">
		<h1>Упс... ничего не найдено</h1>

		<video
			class="not-found__video"
			src="../assets/img/404.mp4"
			autoplay
			loop
			muted
			width="600"
			height="300"
		>
		</video>

		<a
			class="not-found__link"
			href="/"
		>
			На главную
		</a>
	</section>
</BaseLayout>

<style>
	.not-found {
		display: flex;
		gap: 24px;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
	}

	.not-found__video {
		max-width: 100%;
		height: auto;
	}
</style>
